<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls"style= "font-family: 'Sacramento'; font-size: 30px; padding-top: 0px;">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls" >My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <form method="POST" action="/logout" class="form-inline">
        <div class="form-group form-inline">
          <label> Logged in as: <%= user.email %></label>
          <button type="submit" class="btn btn-outline-light">Logout</button>
        </div>
      </form>
      <% } else { %>
        <form method="POST" action="/login" class="form-inline"></form>
        <div class="form-group form-inline">
            <a class="nav-item nav-link" href="/login" style="color:#ffffff">Login</a>
          <a class="nav-item nav-link" href="/register" style="color:#ffffff">Register</a>
        </div>
        </form>
        <% } %>
  </nav>
</header>